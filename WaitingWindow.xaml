<Window x:Class="PTLStation.WaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PTLStation"
        mc:Ignorable="d"
        Title="Ждем соединения" Height="200" Width="400" Background="White" Icon="/Icon.png" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="waiting" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Ждем соединения с базой данных..." VerticalAlignment="Bottom" FontSize="15" Margin="20"/>
        <Button x:Name="button" Content="Закрыть" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Click="button_Click" Margin="141,15.2,128.6,0" Width="124" Height="32" BorderBrush="{x:Null}" Background="#FFE75D5D" Foreground="White"/>

    </Grid>
</Window>
